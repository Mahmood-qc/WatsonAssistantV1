@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Inegrate AI into your business.
                    <a class="btn btn-default" href="http://qcoding.ca">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" role="button" data-slide="prev">
        <span class="glyphicon" aria-hidden="true"></span>
    </a>
    <a class="right carousel-control" role="button" data-slide="next">
        <span class="glyphicon" aria-hidden="true"></span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-horizontal">
            <div class="form-group">
                <div id="messagesDiv" class="form-control">

                </div>
            </div>
            <div class="form-group">
                <input id="inputMessage" placeholder="Type your answer here" class="form-control" />
            </div>
            <div class="form-group">
                <button class="btn btn-block" onclick="CallAssistant()">Send</button>
            </div>
        </div>
    </div>
</div>
